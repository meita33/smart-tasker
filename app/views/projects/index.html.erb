<%= render "shared/header" %>
<div class='main'>

  <%# 画面上部の「人生を変えるフリマアプリ」帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      人生を変えるフリマアプリ
    </h2>
    <p class='service-explain'>
      FURIMAはだれでもかんたんに出品・購入できる
    </p>
    <p class='service-explain'>
      フリマアプリです
    </p>
    <div class='store-btn'>
      <%= link_to image_tag("app-store.svg", class:"apple-btn"), "#" %>
      <%= link_to image_tag("google-play.png", class:"google-btn"), "#" %>
    </div>
  </div>
  <%# /画面上部の「人生を変えるフリマアプリ」帯部分  %>



  <%# プロジェクト一覧 %>
  <div class='project-contents'>
    <div class='project-titles'>
      <h2 class='title'>プロジェクト 一覧</h2>
        <div class="subtitle" >
          <%= link_to new_project_path, class: "link" do %>
            プロジェクト新規作成
          <% end %>
        </div>
    </div>


    <%#新規作成リンクをここに作成予定 %>


    <% @projects.group_by(&:section).each do |section, projects| %>
      <div class='project-groups'>
        <div class='groups-title'>
          <%= section.name %>
        </div>
        <div class='groups-detail'>
          <% projects.each do |project| %>
            <%= link_to project_path(project.id) do %>
              <ul class='detail-area'>
                <%= project.start_date %> 〜 <%= project.end_date %>　【　<%= project.project_title %>　】　

                <%= link_to "編集", edit_project_path(project), class: 'btn-edit' %>
                <%= link_to "削除", project_path(project), method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn-delete' %>
                
              </ul>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
 </div>
  
  <%# /商品一覧 %>


  <%# 完了項目　%>
  <div class='complete-contents'>
    <div class=''>
    </div>

    <%# if @completes.empty? %>
    <%# end %>

  </div>
  <%# /完了項目　%>

</div>


<%= render "shared/footer" %>